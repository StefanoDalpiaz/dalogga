{
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "expect": true,
    "sinon": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
    }
  },
  "rules": {
    "max-len": 0,
    "no-unused-expressions": 0,
    "import/no-extraneous-dependencies": 0
  },
  "extends": "airbnb-base"
}
